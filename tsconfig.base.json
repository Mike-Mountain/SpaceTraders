{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@space-trader/api/data-access": ["libs/api/data-access/src/index.ts"],
      "@space-trader/api/utils": ["libs/api/utils/src/index.ts"],
      "@space-trader/layout/ui": ["libs/layout/ui/src/index.ts"],
      "@space-trader/shared/data-access": [
        "libs/shared/data-access/src/index.ts"
      ],
      "@space-trader/shared/feature": ["libs/shared/feature/src/index.ts"],
      "@space-trader/shared/utils": ["libs/shared/utils/src/index.ts"],
      "@space-trader/space-traders/waypoint": [
        "libs/space-traders/feature/src/lib/modules/waypoints"
      ],
      "@space-trader/space-traders/dashboard": [
        "libs/space-traders/feature/src/lib/modules/dashboard"
      ],
      "@space-trader/space-traders/feature": [
        "libs/space-traders/feature/src/index.ts"
      ],
      "@space-trader/space-traders/system": [
        "libs/space-traders/feature/src/lib/modules/system"
      ],
      "@spaceTrader/shared/ui": ["libs/shared/ui/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
